<canvas id="myChart" style="position: relative; height: 40vh; width: 80vw;"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>

  var ctx = document.getElementById('myChart').getContext("2d");
  ctx.height = 500;

  let delayed;
  let gradient = ctx.createLinearGradient(0,0,0,400);
  gradient.addColorStop(0, "rgba(58,123,213,1)");
  gradient.addColorStop(1, "rgba(0,210,255,0.3)");

  const myChart = new Chart(ctx, {
    type:'line',
    data:{
      labels: [],
      datasets: [{
        label: 'HC Total',
        data: [],
        backgroundColor: gradient,
        borderColor: ['black'],
        borderWidth:1,
        pointStyle: 'circle',
        pointRadius: 5,
        pointHoverRadius: 10,
        pointBackgroundColor: 'rgb(189,195,199)',
        tension:0.5,
        fill: true
      }]
    },
    options:{
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'EvoluciÃ³n HC ({{razon_social}})',
        }
      }
    }
  })

  let url = 'https://dds-2022-mi-ma-grupo-06.herokuapp.com/evolucion_hc_organizacion_back/{{razon_social}}'
  fetch(url)
          .then( response => response.json() )
          .then( datos => mostrar(datos) )
          .catch( error => console.log(error) )


  const mostrar = (reporteOrganizacion) =>{
      reporteOrganizacion.forEach(org => {
      myChart.data['labels'].push(org.anio)
      myChart.data['datasets'][0].data.push(org.hc_total)
      myChart.update()
    });
    console.log(myChart.data)
  }

</script>

